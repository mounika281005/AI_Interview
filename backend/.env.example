# ==============================================================================
# AI Mock Interview System - Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your values

# ================================
# APPLICATION SETTINGS
# ================================
APP_NAME="AI Mock Interview System"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# ================================
# SERVER SETTINGS
# ================================
HOST=0.0.0.0
PORT=8000
RELOAD=true

# ================================
# DATABASE SETTINGS
# ================================
# SQLite (default for development)
DATABASE_URL=sqlite+aiosqlite:///./interview_system.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/interview_db

# ================================
# SECURITY SETTINGS
# ================================
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ================================
# AI MODEL SETTINGS
# ================================
# OpenAI API (for GPT-based question generation)
OPENAI_API_KEY=your-openai-api-key

# Google AI (alternative - Gemini)
GOOGLE_API_KEY=your-google-api-key

# Hugging Face API (for Llama, Mistral, etc.)
HF_API_URL=https://router.huggingface.co/v1/chat/completions
HF_TOKEN=your-huggingface-api-token

# Default AI provider: openai, google, huggingface, local
AI_PROVIDER=huggingface
AI_MODEL=meta-llama/Meta-Llama-3-8B-Instruct

# ================================
# SPEECH-TO-TEXT SETTINGS
# ================================
# STT Provider: whisper, google, azure
STT_PROVIDER=whisper
WHISPER_MODEL=base

# Google Cloud Speech (if using)
GOOGLE_CLOUD_CREDENTIALS=path/to/credentials.json

# ================================
# FILE STORAGE SETTINGS
# ================================
UPLOAD_DIR=./uploads
MAX_AUDIO_SIZE_MB=50
ALLOWED_AUDIO_FORMATS=wav,mp3,m4a,webm,ogg

# ================================
# CORS SETTINGS
# ================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true

# ================================
# LOGGING SETTINGS
# ================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
